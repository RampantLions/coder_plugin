# see: http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 100

[*.json]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.rst]
tab_width = 4

[*.yml]
tab_width = 2
indent_size = 2

[*.yaml]
tab_width = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{bat,cmd,ps1}]
end_of_line = crlf
